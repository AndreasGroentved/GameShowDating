<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <EditText
            android:layout_width="332dp"
            android:layout_height="129dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/customizeBiography" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="10dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.046" android:hint="Write a biography"
            android:textAppearance="@style/TextAppearance.AppCompat" android:textColor="@android:color/black"
    />
    <Button
            android:text="Change Profile Image"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:id="@+id/customizeProfileImage"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:background="@color/colorPrimary" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/customizeBiography" app:layout_constraintHorizontal_bias="0.571"/>
    <Button
            android:text="Upload/Record Video 1"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:id="@+id/customizeVideo1"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:background="@color/colorPrimary" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/customizeProfileImage"/>
    <Button
            android:text="Upload/Record Video 2"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:id="@+id/customizeVideo2"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:background="@color/colorPrimary" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/customizeVideo1"/>
    <Button
            android:text="Upload/Record Video 3"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:id="@+id/customizeVideo3"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:background="@color/colorPrimary" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/customizeVideo2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Save Changes"
            android:layout_width="124dp"
            android:layout_height="43dp"
            android:id="@+id/customizeSaveButton"
            android:background="@color/colorPrimary"
            android:textAppearance="@style/TextAppearance.AppCompat" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/customizeVideo3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>