<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="Upload Video"
            android:layout_width="299dp"
            android:layout_height="50dp"
            android:id="@+id/videoSettingUploadButton"
            android:layout_marginEnd="30dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:background="@color/colorPrimary" android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/videoSettingRecordButton"
            app:layout_constraintVertical_bias="0.2"/>
    <Button
            android:text="Record new video"
            android:layout_width="299dp"
            android:layout_height="50dp"
            android:id="@+id/videoSettingRecordButton"
            android:layout_marginEnd="30dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="228dp"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorPrimary"
            android:textAppearance="@style/TextAppearance.AppCompat"/>
    <Button
            android:text="Return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/videoSettingReturnButton"
            android:textAppearance="@style/TextAppearance.AppCompat" android:background="@color/colorPrimary"
            android:layout_marginTop="96dp" app:layout_constraintTop_toBottomOf="@+id/videoSettingRecordButton"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/videoSettingLabel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="150dp" android:layout_marginTop="42dp"
            app:layout_constraintTop_toBottomOf="@+id/videoSettingRecordButton"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="152dp"
            android:layout_marginBottom="35dp" app:layout_constraintBottom_toTopOf="@+id/videoSettingReturnButton"
            android:textColor="@android:color/black"/>
</android.support.constraint.ConstraintLayout>