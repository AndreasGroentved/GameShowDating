<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="2dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/feedback_cell">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/feedbackNameTextview" android:textSize="12sp"
                android:textColor="@android:color/black"
                android:paddingLeft="20dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/feedbackFeedbackTextview" android:textSize="18sp"
                android:textColor="@android:color/black"
                android:paddingLeft="20dp"/>
        <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
        />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>